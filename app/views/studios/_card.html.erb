<%= link_to studio, class: "studio-card card mb-3 text-decoration-none" do %>
  <div class="row g-0">
    <div class="col-md-4">
      <% if studio.photo.attached? %>
        <%= cl_image_tag studio.photo.key, width: 180, height: 152, crop: :fill, class: "img-fluid rounded-start" %>
      <% else %>
        <img src="https://place-hold.it/180x165" class="img-fluid rounded-start" alt="...">
      <% end %>

    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><strong><em><%=studio.name%></em></strong></h5>
        <p class="card-text"> <%= studio.address %> </p>
        <p class="card-text"><small class="text-muted"><%= studio.owner.first_name %> <%= studio.owner.last_name %></small></p>
      </div>
    </div>
  </div>
<% end %>
