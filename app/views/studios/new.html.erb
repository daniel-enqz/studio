      <%= simple_form_for @studio do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address,
                      input_html: { data: { geocoder_target: "address" } },
                      wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['pk.eyJ1IjoiZWRzb25xdWludGVybyIsImEiOiJja3pzdmZ2cWgxbXd5MnlzOGE1NnFyOHB4In0.C7jSSFGsl49CUVhD8jf-Ug'] } } %>
